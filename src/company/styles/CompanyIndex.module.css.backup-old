}

.final-statement {
  position: relative;
  background: var(--surface-secondary);
  color: var(--text-primary);
  padding: var(--spacing-xl);
  border-radius: var(--border-radius-lg);
  margin-top: var(--spacing-2xl);
  text-align: center;
  font-size: var(--font-size-lg);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border-primary);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  animation: fadeInUp 0.8s ease-out;
  font-weight: var(--font-weight-medium);
}

.final-statement::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--brand-gradient);
  background-size: 200% 100%;
  border-top-left-radius: var(--border-radius-lg);
  border-top-right-radius: var(--border-radius-lg);
  animation: gradientFlow 6s linear infinite;
  pointer-events: none;
}

/* ===== ANIMATIONS ===== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(var(--spacing-lg));
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 768px) {
  .overview-cards {
    grid-template-columns: 1fr;
    padding: 0 var(--spacing-md);
  }
  
  .company-hero {
    margin: var(--spacing-lg) var(--spacing-md);
    padding: var(--spacing-xl) var(--spacing-lg);
  }
  
  .footer-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .cta-button,
  .cta-button-secondary {
    width: 100%;
    max-width: 300px;
    justify-content: center;
  }
}

/* ===== GLOBAL TIMELINE CLASSES (for direct className usage) ===== */
:global(.timeline-container) {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
}

:global(.timeline-item) {
  display: flex;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  position: relative;
}

:global(.timeline-marker) {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  position: relative;
}

:global(.timeline-dot) {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: var(--brand-primary);
  border: 3px solid var(--surface-primary);
  box-shadow: 0 0 0 3px var(--brand-primary);
  z-index: 2;
}

:global(.timeline-line) {
  width: 3px;
  height: 100px;
  background: var(--border-secondary);
  margin-top: var(--spacing-sm);
}

:global(.timeline-content) {
  flex: 1;
  background: var(--surface-primary);
  border: 1px solid var(--border-secondary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

:global(.timeline-content:hover) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

